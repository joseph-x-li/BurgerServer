<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.burger.BurgerServer.MainActivity">

    <Button
        android:id="@+id/reset"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="111dp"
        android:layout_height="50dp"
        android:layout_marginEnd="17dp"
        android:onClick="onReset"
        android:text="START"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        android:layout_marginStart="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.855"
        android:layout_marginLeft="8dp"
        tools:layout_editor_absoluteY="68dp" />

    <Button
        android:id="@+id/bun"
        android:layout_width="147dp"
        android:layout_height="94dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:background="#d1975d"
        android:contentDescription="bun"
        android:onClick="onPress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/cheese"
        android:layout_width="0dp"
        android:layout_height="94dp"
        android:layout_marginBottom="14dp"
        android:background="?android:attr/colorPressedHighlight"
        android:contentDescription="cheese"
        android:onClick="onPress"
        app:layout_constraintBottom_toTopOf="@+id/bun"
        app:layout_constraintLeft_toLeftOf="@+id/bun"
        app:layout_constraintRight_toRightOf="@+id/bun"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/lettuce"
        android:layout_width="147dp"
        android:layout_height="0dp"
        android:layout_marginEnd="21dp"
        android:background="@android:color/holo_green_light"
        android:contentDescription="lettuce"
        android:onClick="onPress"
        app:layout_constraintBottom_toBottomOf="@+id/cheese"
        app:layout_constraintRight_toLeftOf="@+id/cheese"
        app:layout_constraintTop_toTopOf="@+id/cheese"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="-332dp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/patty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#7e4f4f"
        android:contentDescription="patty"
        android:onClick="onPress"
        app:layout_constraintBottom_toBottomOf="@+id/bun"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/lettuce"
        app:layout_constraintRight_toRightOf="@+id/lettuce"
        app:layout_constraintTop_toTopOf="@+id/bun"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/hsView"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="18dp"
        android:contentDescription="highScore"
        android:text="Highscore: 0"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/reset"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="128dp"
        android:layout_height="152dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="133dp"
        android:text="Click the button that corresponds to the ingredient on the bottom of the stack! Don't allow the stack to hit the red line!"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.365"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintRight_toLeftOf="@+id/cheese"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/lettuce"
        android:layout_marginEnd="18dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/lettuce"
        app:layout_constraintHorizontal_bias="0.111" />

    <Button
        android:id="@+id/cheatButton"
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="103dp"
        android:onClick="onCheat"
        android:textSize="0sp"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/hsView"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
